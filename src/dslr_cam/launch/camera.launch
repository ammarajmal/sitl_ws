<launch>
  
  <arg name="camera_name" default="sony_cam1"/>
  <arg name="camera_id" default="0"/>
  <arg name="device_ip" default="192.168.1.201"/>
  <arg name="camera_calib" default="file://$(find dslr_cam)/config/$(arg camera_name)_info.yaml"/>

  <node name="$(arg camera_name)"
        pkg="dslr_cam"
        type="dslr_cam_node"
        output="screen">
    <param name="frame_rate" value="60"/>
    <param name="camera_name" value="$(arg camera_name)"/>
    <param name="camera_frame_id" value="$(arg camera_name)"/>
    <param name="device_id" value="/dev/$(arg camera_id)"/>
    <!-- <param name="image_width" value="320"/>
    <param name="image_height" value="240"/> -->
    <param name="image_width" value="640"/>
    <param name="image_height" value="480"/>
    <param name="camera_info_url" value="$(arg camera_calib)"/>
  </node>
</launch>