<launch>
    <arg name="nuc_name" default="" />
    <arg name="nuc_address" default="" />
    <arg name="nuc_user" default="" />
    <arg name="nuc_password" default="" />
    <!-- <arg name="cam" default="" /> -->
    <arg name="calib_file" default="" />
    <arg name="device_id" default="0" />
    <arg name="env_loader_path" default="/opt/ros/noetic/env_remote.sh" />

    <machine
        name="$(arg nuc_name)"
        address="$(arg nuc_address)"
        env-loader="$(arg env_loader_path)"
        default="true"
        user="$(arg nuc_user)"
        password="$(arg nuc_password)"
    />
    <node
        machine="$(arg nuc_name)"
        pkg="gige_cam_driver"
        name="$(arg nuc_name)"
        type="camera_node.py"
        output="log">
        <param name="device_id" value="$(arg device_id)"/>
        <param name="camera_manager" value="$(arg nuc_name)"/>
        <param name="calibration_file" value="/home/$(arg nuc_user)/ros_ws/src/gige_cam_driver/config/camera_info_$(arg calib_file).yaml"/>
    </node>
</launch>
