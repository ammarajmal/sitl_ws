<launch>
   <arg name="cam" default="camera_3" />
   <arg name="device_id" default="0" />
   <arg name="calib_file" default="cam3" />

   <machine
      name="NUC3"
      address="192.168.43.13"
      env-loader="/opt/ros/noetic/env_remote.sh"
      default = "true"
      user="sitl3"
      password="sitl"
   />  
   <node
      machine="NUC3"
      pkg="gige_cam_driver"
      name="$(arg cam)"
      type="camera_node.py"
      output="log">

      <param name="device_id" value="$(arg device_id)"/>
      <param name="camera_manager" value="$(arg cam)"/>
      <param name="calibration_file" value="/home/sitl3/ros_ws/src/gige_cam_driver/config/camera_info_$(arg calib_file).yaml"/>

   </node>
</launch>



